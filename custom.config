// Custom process-specific resource overrides
// Use this file to adjust memory, CPU, and time allocations for specific processes

process {
    // Increase memory for STAR alignment (memory-intensive)
    withName: 'STAR_ALIGN' {
        memory = 64.GB
        cpus = 12
        time = 8.h
    }

    // Adjust Salmon quantification resources
    withName: 'SALMON_QUANT' {
        memory = 32.GB
        cpus = 8
    }

    // Override resources for all high-resource processes
    withLabel: 'process_high' {
        memory = 100.GB
        cpus = 16
    }

    // Example: Retry failed processes with more resources
    withName: 'PROBLEMATIC_PROCESS' {
        memory = { 64.GB * task.attempt }
        time = { 12.h * task.attempt }
        errorStrategy = 'retry'
        maxRetries = 3
    }
}
